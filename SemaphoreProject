#include <Wire.h>
volatile bool changedByInterr = false;
volatile bool notSetAlready = true;
long innerTimer = 0;
int b1;
long secondInnerTimer = 0;
void setup() {
  Serial.begin(9600);

  Wire.begin();
  pinMode(2, INPUT_PULLUP);
  pinMode(5, OUTPUT);
  pinMode(4, OUTPUT);
  attachInterrupt(digitalPinToInterrupt(2), TurnGreen, FALLING);
  digitalWrite(4, LOW);
  digitalWrite(5, HIGH);
}

void loop() {
  normalSemaphore();
}

void normalSemaphore(void) {

  if (changedByInterr) {
    digitalWrite(5, LOW);
    digitalWrite(4, HIGH);

    changedByInterr = false;
    Wire.beginTransmission(9);
    Wire.write('1');
    Wire.endTransmission();
    delay(5000);
    Wire.beginTransmission(9);
    Wire.write('0');
    Wire.endTransmission();

  } else {
    digitalWrite(5, HIGH);
    digitalWrite(4, LOW);
  }
}
void TurnGreen(void) {
  Serial.println("button ");
  if (digitalRead(4) == LOW) {
    changedByInterr = true;
  }
}
